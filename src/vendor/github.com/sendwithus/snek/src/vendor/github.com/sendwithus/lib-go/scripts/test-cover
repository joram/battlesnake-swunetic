#!/bin/bash
#? test the app and build coverage

swu build || exit 1

docker run --rm --env-file scripts/.env -v "$PWD":/go/src/github.com/sendwithus/lib-go -v "$PWD"/pkg:/go/pkg -v "$PWD"/bin:/go/bin \
    -w /go/src/github.com/sendwithus/lib-go golang:1.7-alpine go test -v -coverprofile=cover.out

docker run --rm --env-file scripts/.env -v "$PWD":/go/src/github.com/sendwithus/lib-go -v "$PWD"/pkg:/go/pkg -v "$PWD"/bin:/go/bin \
    -w /go/src/github.com/sendwithus/lib-go golang:1.7-alpine go tool cover -html=cover.out -o coverage.html

rm cover.out
